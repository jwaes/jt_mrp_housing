<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_housing_project" model="ir.actions.report">
        <field name="name">Housing project report</field>
        <field name="model">jt.housing.project</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">jt_mrp_housing.report_housing_project</field>
        <field name="report_file">jt_mrp_housing.report_housing_project</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_model_id" ref="model_jt_housing_project"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_housing_entity" model="ir.actions.report">
        <field name="name">Housing entity report</field>
        <field name="model">jt.housing.entity</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">jt_mrp_housing.report_housing_entity</field>
        <field name="report_file">jt_mrp_housing.report_housing_entity</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_model_id" ref="model_jt_housing_entity"/>
        <field name="binding_type">report</field>
    </record>    

    <template id="report_housing_project">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="jt_mrp_housing.report_layout">
                    <div class="page">
                        <t t-call="jt_mrp_housing.project_header"/>

                        <table class="table table-sm o_main_table mt-4">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th>Entity</th>
                                    <th>Batch</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.entity_ids" t-as="entity">
                                    <tr>
                                        <td><t t-esc="entity.name"/></td>
                                        <td><t t-if="entity.batch_id" t-esc="entity.batch_id.name"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_housing_entity">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="jt_mrp_housing.report_layout">
                    <div class="page">
                        <t t-call="jt_mrp_housing.project_header"/>

                        <h2 t-esc="o.name"/>
                        <p t-esc="o.description"/>

                        <div class="row mt-4 mb-f" id="informations">
                            <div class="col-auto col-3">
                                <strong>Batch:</strong>
                                <p class="m-0">
                                    <span t-if="o.batch_id" t-field="o.batch_id"/>
                                    <span t-else="">-</span>
                                </p>
                            </div>
                            <div class="col-auto col-3">
                                <strong>Scheduled date:</strong>
                                <p class="m-0">
                                    <span t-if="o.batch_id.planned_delivery_date" t-field="o.batch_id.planned_delivery_date"/>
                                    <span t-else="">-</span>
                                </p>
                            </div>
                            <div class="col-auto col-3">
                                <strong>Status:</strong>
                                <p class="m-0">
                                    <span t-field="o.state"/>
                                </p>
                            </div>                                                      

                        </div>

                        <table class="table table-sm o_main_table mt-4">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.bom_line_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.product_id"/></td>
                                        <td><span t-field="line.product_qty"/></td>
                                        <td><span t-field="line.product_uom_id"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>    


    <template id="project_header">
        <t t-if="o._name == 'jt.housing.project'" t-set="project" t-value="o"/>
        <t t-if="not project" t-set="project" t-value="o.project_id"/>

        <div class="row mb-3">
            <div class="col-9">
                <h1 t-esc="project.name"/>
                <h4><t t-esc="project.composite_code" /><t t-if="project.reference"> (<t t-esc="project.reference"/>)</t></h4>
                <p>Contact<t t-if="len(project.responsibles_ids) > 1">s</t>: 
                    <t t-foreach="project.responsibles_ids" t-as="responsible">
                        <t t-esc="responsible.name"/>
                        <t t-if="not responsible_last">, </t>
                    </t>
                </p>
            </div>
            <div class="col-3"><img t-if="project.partner_id.image_1024" t-attf-src="data:image/*;base64,{{project.partner_id.image_1024}}" class="img-fluid"/></div>
            <t t-out="0"/>
        </div>
    </template>

    <template id="report_layout">

        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div t-attf-class="o_company_#{company.id}_layout header" t-att-style="report_header_style">
            <div class="o_background_header">
            <div class="float-right">
                <h3 class="mt0 text-right" t-field="company.report_header"/>
            </div>
            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-left mr-3" alt="Logo"/>
            <div class="float-left company_address">
                <!-- <span t-if="company.company_details" t-field="company.company_details"></span> -->
                <span t-field="company.name"/><br/>
                <span t-field="company.street"/><br/>
                <t t-if="company.street2"><span t-field="company.street2"/><br/></t>
                <span t-field="company.zip"/>
                <span t-field="company.city"/><br/>
                <span t-field="company.country_id"/><br/>
            </div>
            <div class="clearfix mb8"/>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-out="0"/>
        </div>

        <div t-attf-class="o_company_#{company.id}_layout footer o_background_footer">
            <div class="text-center">
                <ul class="list-inline">
                    <div t-field="company.report_footer"/>
                </ul>
                <div t-if="report_type == 'pdf'" class="text-muted">
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>
        </div>

    </template>

</odoo>
